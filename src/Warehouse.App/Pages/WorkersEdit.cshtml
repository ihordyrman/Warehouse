@page
@model Warehouse.App.Pages.WorkersEditModel
@{
    ViewData["Title"] = "Edit Worker";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <div class="flex items-center mb-2">
            <a asp-page="/Workers" class="text-gray-600 hover:text-gray-900 mr-2">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Edit Worker</h1>
        </div>
        <p class="text-gray-600">Update worker configuration for ID: @Model.WorkerId</p>
    </div>

    <div class="card">
        <form method="post" asp-page-handler="Post" asp-route-id="@Model.WorkerId">
            <div class="space-y-6">
                <div>
                    <label asp-for="Input.Type" class="block text-sm font-medium text-gray-700 mb-2">
                        Market Type <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="Input.Type"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        @foreach (MarketType marketType in Model.MarketTypes)
                        {
                            <option value="@marketType">@marketType</option>
                        }
                    </select>
                    <span asp-validation-for="Input.Type" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Symbol" class="block text-sm font-medium text-gray-700 mb-2">
                        Symbol <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Input.Symbol"
                           type="text"
                           placeholder="e.g., BTC-USDT, ETH-USDT"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                           required/>
                    <p class="text-sm text-gray-500 mt-1">
                        Enter the trading pair symbol (uppercase letters, numbers, hyphens, and slashes only)
                    </p>
                    <span asp-validation-for="Input.Symbol" class="text-red-500 text-sm"></span>
                </div>

                <div class="flex items-center">
                    <input asp-for="Input.Enabled"
                           type="checkbox"
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"/>
                    <label asp-for="Input.Enabled" class="ml-2 block text-sm text-gray-700">
                        Worker enabled
                    </label>
                </div>

                <div class="flex justify-end space-x-3 pt-4 border-t">
                    <a asp-page="/Workers" class="btn-secondary">
                        <i class="fas fa-times mr-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-save mr-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <h3 class="text-sm font-semibold text-yellow-900 mb-2">
            <i class="fas fa-exclamation-triangle mr-1"></i>Important Notes
        </h3>
        <ul class="text-sm text-yellow-800 space-y-1">
            <li>• Changing the symbol or market type may affect existing pipeline configurations</li>
            <li>• Disabling a worker will stop all automated trading for this configuration</li>
            <li>• The combination of market type and symbol must remain unique</li>
        </ul>
    </div>
</div>
