@page
@model Warehouse.App.Pages.WorkersModel
@{
    ViewData["Title"] = "Workers";
}

<div>
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Trading Workers</h1>
            <p class="text-gray-600">Manage your automated trading workers</p>
        </div>
        <a href="/WorkersCreate"
           class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200">
            <i class="fas fa-plus mr-2"></i>Add Worker
        </a>
    </div>

    <!-- Filter Bar -->
    <div class="card mb-6">
        <form hx-get="/Workers" hx-target="#workers-table-body" hx-trigger="change, keyup delay:500ms from:input">
            <div class="flex flex-wrap gap-4">
                <div class="flex-1 min-w-[200px]">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Search Symbol</label>
                    <input type="text"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           placeholder="Search by symbol..."
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="min-w-[150px]">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Tag</label>
                    <select name="filterTag"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">All Tags</option>
                        @foreach (string tag in Model.AllTags)
                        {
                            <option value="@tag" selected="@(Model.FilterTag == tag)">@tag</option>
                        }
                    </select>
                </div>
                <div class="min-w-[150px]">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Account</label>
                    <select name="filterAccount"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">All Accounts</option>
                        <option value="Okx" selected="@(Model.FilterAccount == "Okx")">Okx</option>
                        <option value="Binance" selected="@(Model.FilterAccount == "Binance")">Binance</option>
                    </select>
                </div>
                <div class="min-w-[150px]">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select name="filterStatus"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">All Status</option>
                        <option value="enabled" selected="@(Model.FilterStatus == "enabled")">Enabled</option>
                        <option value="disabled" selected="@(Model.FilterStatus == "disabled")">Disabled</option>
                    </select>
                </div>
                <div class="min-w-[150px]">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Sort By</label>
                    <select name="sortBy"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="symbol" selected="@(Model.SortBy == "symbol")">Symbol (A-Z)</option>
                        <option value="symbol-desc" selected="@(Model.SortBy == "symbol-desc")">Symbol (Z-A)</option>
                        <option value="account" selected="@(Model.SortBy == "account")">Account (A-Z)</option>
                        <option value="account-desc" selected="@(Model.SortBy == "account-desc")">Account (Z-A)</option>
                        <option value="status" selected="@(Model.SortBy == "status")">Status (Disabled First)</option>
                        <option value="status-desc" selected="@(Model.SortBy == "status-desc")">Status (Enabled First)</option>
                        <option value="updated" selected="@(Model.SortBy == "updated")">Updated (Oldest)</option>
                        <option value="updated-desc" selected="@(Model.SortBy == "updated-desc")">Updated (Newest)</option>
                    </select>
                </div>
            </div>
        </form>
    </div>

    <!-- Workers Table -->
    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Symbol
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Account
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Status
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Tags
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Last Updated
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody id="workers-table-body" class="bg-white divide-y divide-gray-200">
                <partial name="_WorkerListRows" model="Model.Workers"/>
                </tbody>
            </table>
        </div>
    </div>
</div>
