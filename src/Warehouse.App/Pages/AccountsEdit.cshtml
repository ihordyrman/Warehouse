@page
@model Warehouse.App.Pages.AccountsEditModel
@{
    ViewData["Title"] = "Edit Market Account";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="/Accounts" class="text-gray-500 hover:text-gray-700 text-sm">
            <i class="fas fa-arrow-left mr-1"></i>Back to Accounts
        </a>
        <h1 class="text-2xl font-bold text-gray-900 mt-2">Edit @Model.MarketName Account</h1>
        <p class="text-gray-600">Update API credentials for this market connection.</p>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <form method="post" class="p-6 space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm"></div>
            <input type="hidden" asp-for="Input.Id"/>

            <div>
                <label asp-for="Input.ApiKey" class="block text-sm font-medium text-gray-700 mb-1">API Key</label>
                <input asp-for="Input.ApiKey" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                       placeholder="Enter your API key"/>
                <span asp-validation-for="Input.ApiKey" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div>
                <label asp-for="Input.SecretKey" class="block text-sm font-medium text-gray-700 mb-1">Secret Key</label>
                <input asp-for="Input.SecretKey" type="password"
                       class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                       placeholder="Enter your Secret key"/>
                <span asp-validation-for="Input.SecretKey" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div>
                <label asp-for="Input.Passphrase" class="block text-sm font-medium text-gray-700 mb-1">Passphrase</label>
                <input asp-for="Input.Passphrase" type="password"
                       class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                       placeholder="Enter passphrase (if required)"/>
                <span asp-validation-for="Input.Passphrase" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="flex items-center">
                <input asp-for="Input.Enabled" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"/>
                <label asp-for="Input.Enabled" class="ml-2 block text-sm text-gray-900">
                    Enable this account
                </label>
            </div>

            <div class="flex items-center">
                <input asp-for="Input.IsSandbox" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"/>
                <label asp-for="Input.IsSandbox" class="ml-2 block text-sm text-gray-900">
                    Sandbox
                </label>
            </div>

            <div class="pt-4 border-t border-gray-100 flex justify-end space-x-3">
                <a href="/Accounts"
                   class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors">Cancel</a>
                <button type="submit"
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium shadow-sm transition-colors">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
