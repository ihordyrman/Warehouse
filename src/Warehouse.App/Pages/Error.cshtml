@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center py-12">
    <div class="card max-w-2xl mx-auto">
        <div class="flex items-center justify-center mb-4">
            <div class="p-3 bg-red-100 rounded-lg">
                <i class="fas fa-exclamation-triangle text-3xl text-red-600"></i>
            </div>
        </div>

        <h1 class="text-2xl font-bold text-gray-900 mb-2">Oops! Something went wrong</h1>

        @if (Model.ShowRequestId)
        {
            <p class="text-sm text-gray-500 mb-4">
                <strong>Request ID:</strong> <code class="text-red-600">@Model.RequestId</code>
            </p>
        }

        <p class="text-gray-700 mb-6">
            An error occurred while processing your request. Please try again later or contact support if the problem persists.
        </p>

        <div class="flex justify-center space-x-4">
            <a asp-page="/Index" class="btn-primary">
                <i class="fas fa-home mr-2"></i>Go to Dashboard
            </a>
            <button onclick="history.back()" class="btn-secondary">
                <i class="fas fa-arrow-left mr-2"></i>Go Back
            </button>
        </div>

        @if (Model.IsDevelopment)
        {
            <div class="mt-8 pt-8 border-t border-gray-200">
                <details class="text-left">
                    <summary class="cursor-pointer text-sm font-medium text-gray-700 hover:text-gray-900">
                        Developer Details
                    </summary>
                    <div class="mt-4 p-4 bg-gray-50 rounded-md">
                        @if (!string.IsNullOrEmpty(Model.ExceptionMessage))
                        {
                            <div class="mb-4">
                                <strong class="text-sm text-gray-700">Exception:</strong>
                                <pre class="mt-1 text-xs text-red-600 overflow-x-auto">@Model.ExceptionMessage</pre>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.StackTrace))
                        {
                            <div>
                                <strong class="text-sm text-gray-700">Stack Trace:</strong>
                                <pre class="mt-1 text-xs text-gray-600 overflow-x-auto max-h-64 overflow-y-auto">@Model.StackTrace</pre>
                            </div>
                        }
                    </div>
                </details>
            </div>
        }
    </div>
</div>
