<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Warehouse System</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/htmx.org@2.0.8"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.1.0/css/all.min.css">

    <style>
        .card {
            @@apply bg-white rounded-lg shadow-md p-6
            hover: shadow-lg transition-shadow;
        }

        .badge {
            @@apply px-2 py-1 rounded-full text-xs font-semibold;
        }

        .badge-success {
            @@apply bg-green-100 text-green-800;
        }

        .badge-danger {
            @@apply bg-red-100 text-red-800;
        }

        .badge-warning {
            @@apply bg-yellow-100 text-yellow-800;
        }

        .btn-primary {
            @@apply bg-blue-600 text-white px-4 py-2 rounded-md
            hover: bg-blue-700 transition-colors;
        }

        .btn-secondary {
            @@apply bg-gray-600 text-white px-4 py-2 rounded-md
            hover: bg-gray-700 transition-colors;
        }
    </style>

    @await RenderSectionAsync("Styles", false)
</head>
<body class="min-h-screen bg-gray-50">
<!-- Header -->
<header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center space-x-8">
                <h1 class="text-xl font-bold text-gray-900">
                    <a asp-page="/Index">Warehouse System</a>
                </h1>
                <nav class="hidden md:flex space-x-4">
                    <a asp-page="/Index" class="text-gray-700 hover:text-gray-900">Dashboard</a>
                    <a asp-page="/Accounts" class="text-gray-700 hover:text-gray-900">Accounts</a>
                    <a asp-page="/Workers" class="text-gray-700 hover:text-gray-900">Workers</a>
                    <a asp-page="/Trading" class="text-gray-700 hover:text-gray-900">Trading</a>
                    <a asp-page="/Settings" class="text-gray-700 hover:text-gray-900">Settings</a>
                </nav>
            </div>
            <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-500">Status:</span>
                <span id="system-status"
                      hx-get="/system-status"
                      hx-trigger="load, every 30s"
                      hx-swap="outerHTML">
                        <span class="badge">Loading...</span>
                    </span>
                <button type="button"
                        hx-post="/refresh"
                        hx-target="#main-content"
                        class="text-gray-500 hover:text-gray-700"
                        aria-label="Refresh page">
                    <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </div>
    </div>
</header>

<main id="main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    @RenderBody()
</main>

@await RenderSectionAsync("Scripts", false)

<script>
    document.body.addEventListener('htmx:configRequest', (event) => {
        if (event.detail.verb !== 'GET') {
            event.detail.headers['Content-Type'] = 'application/json';
        }
    });

    window.formatCurrency = function (amount) {
        return new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD'
        }).format(amount);
    };
</script>
</body>
</html>
