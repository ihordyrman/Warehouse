@model List<WorkersModel.WorkerInfo>

@if (!Model.Any())
{
    <tr>
        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
            <i class="fas fa-robot text-4xl mb-2"></i>
            <p>No workers found matching your filters.</p>
        </td>
    </tr>
}
else
{
    @foreach (WorkersModel.WorkerInfo worker in Model)
    {
        <partial name="_WorkerListRow" model="worker"/>
    }
}
