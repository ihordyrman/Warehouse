@model Warehouse.App.Pages.WorkersModel.WorkerInfo

<div class="card worker-card" id="worker-@Model.Id">
    <div class="flex justify-between items-start mb-4">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">@Model.Symbol</h3>
            <span class="text-sm text-gray-500">@Model.MarketType</span>
        </div>
        <button hx-post="/Workers?handler=Toggle&id=@Model.Id&enabled=@(!Model.Enabled)"
                hx-target="#worker-@Model.Id"
                hx-swap="outerHTML"
                class="px-3 py-1 rounded-md text-sm font-medium transition-colors @(Model.Enabled ? "bg-green-100 text-green-800 hover:bg-green-200" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
            @(Model.Enabled ? "Enabled" : "Disabled")
        </button>
    </div>

    <div class="space-y-2 text-sm">
        <div class="flex justify-between">
            <span class="text-gray-500">Strategy:</span>
            <span class="text-gray-900">@(Model.Strategy ?? "Not configured")</span>
        </div>
        <div class="flex justify-between">
            <span class="text-gray-500">Interval:</span>
            <span class="text-gray-900">@(Model.Interval ?? "1m")</span>
        </div>
        <div class="flex justify-between">
            <span class="text-gray-500">Last Run:</span>
            <span class="text-gray-900">@FormatDateTime(Model.LastRun)</span>
        </div>
        <div class="flex justify-between">
            <span class="text-gray-500">Status:</span>
            <span class="@(Model.Enabled ? "text-green-600" : "text-gray-600")">
                @(Model.Enabled ? "Running" : "Idle")
            </span>
        </div>
    </div>

    <div class="flex justify-end space-x-2 mt-4 pt-4 border-t">
        <a asp-page="/WorkersDetails" asp-route-id="@Model.Id" class="text-blue-600 hover:text-blue-800 text-sm">
            <i class="fas fa-chart-line mr-1"></i>Stats
        </a>
        <a asp-page="/WorkersEdit" asp-route-id="@Model.Id" class="text-gray-600 hover:text-gray-800 text-sm">
            <i class="fas fa-cog mr-1"></i>Configure
        </a>
    </div>
</div>

@functions {

    private string FormatDateTime(DateTime? date)
    {
        if (!date.HasValue)
            return "Never";

        var options = new System.Globalization.CultureInfo("en-US");
        return date.Value.ToString("MMM dd, HH:mm", options);
    }

}
