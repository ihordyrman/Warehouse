@model StepSelectorViewModel

<div class="p-6">
    <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Add Pipeline Step</h3>
        <button onclick="document.getElementById('step-modal').classList.add('hidden')"
                class="text-gray-400 hover:text-gray-600">
            <i class="fas fa-times text-xl"></i>
        </button>
    </div>

    <p class="text-gray-600 mb-6">Select a step type to add to your pipeline</p>

    @foreach (IGrouping<string, StepDefinitionViewModel> categoryGroup in Model.Definitions.GroupBy(d => d.Category))
    {
        <div class="mb-6">
            <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wide mb-3 flex items-center gap-2">
                <i class="fas @GetCategoryIcon(categoryGroup.Key)"></i>
                @categoryGroup.Key
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                @foreach (StepDefinitionViewModel step in categoryGroup)
                {
                    <button hx-post="?handler=AddStep&id=@Model.PipelineId&stepTypeKey=@step.Key"
                            hx-target="#step-list"
                            hx-swap="beforeend"
                            onclick="document.getElementById('step-modal').classList.add('hidden')"
                            class="flex items-start gap-3 p-4 text-left border rounded-lg transition-all
                                   @(step.IsAlreadyInPipeline ? "bg-gray-50 border-gray-200 cursor-not-allowed opacity-60" : "bg-white hover:border-blue-300 hover:shadow-md cursor-pointer")"
                            @(step.IsAlreadyInPipeline ? "disabled" : "")>
                        <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center bg-blue-100 text-blue-600 rounded-lg">
                            <i class="fas @step.Icon"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2">
                                <span class="font-medium text-gray-900">@step.Name</span>
                                @if (step.IsAlreadyInPipeline)
                                {
                                    <span class="text-xs bg-gray-200 text-gray-600 px-2 py-0.5 rounded">Added</span>
                                }
                            </div>
                            <p class="text-sm text-gray-500 mt-1">@step.Description</p>
                        </div>
                    </button>
                }
            </div>
        </div>
    }
</div>

@functions {

    string GetCategoryIcon(string category)
        => category switch
        {
            "Validation" => "fa-check-circle",
            "Risk" or "RiskManagement" => "fa-shield-alt",
            "Signal" or "SignalGeneration" => "fa-chart-line",
            "Execution" => "fa-play-circle",
            _ => "fa-puzzle-piece"
        };

}
