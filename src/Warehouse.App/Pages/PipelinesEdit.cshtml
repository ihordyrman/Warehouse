@page
@model PipelinesEditModel
@{
    ViewData["Title"] = "Edit Pipeline";
}

<div>
    <div class="mb-6">
        <div class="flex items-center mb-2">
            <a asp-page="/Dashboard" class="text-gray-600 hover:text-gray-900 mr-2">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Edit Pipeline</h1>
        </div>
        <p class="text-gray-600">Update pipeline configuration for ID: @Model.PipelineId</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Pipeline Settings -->
        <div class="card">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-cog mr-2 text-blue-600"></i>Pipeline Settings
            </h2>
            <form method="post" asp-page-handler="Post" asp-route-id="@Model.PipelineId">
                <div class="space-y-4">
                    <div>
                        <label asp-for="Input.Type" class="block text-sm font-medium text-gray-700 mb-2">
                            Market Type <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.Type"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            @foreach (MarketType marketType in Model.MarketTypes)
                            {
                                <option value="@marketType">@marketType</option>
                            }
                        </select>
                        <span asp-validation-for="Input.Type" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Symbol" class="block text-sm font-medium text-gray-700 mb-2">
                            Symbol <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.Symbol"
                               type="text"
                               placeholder="e.g., BTC-USDT"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                               required/>
                        <span asp-validation-for="Input.Symbol" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.TagsInput" class="block text-sm font-medium text-gray-700 mb-2">
                            Tags
                        </label>
                        <input asp-for="Input.TagsInput"
                               type="text"
                               placeholder="e.g., scalping, btc"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
                        <p class="text-sm text-gray-500 mt-1">Comma-separated tags</p>
                    </div>

                    <div class="flex items-center">
                        <input asp-for="Input.Enabled"
                               type="checkbox"
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"/>
                        <label asp-for="Input.Enabled" class="ml-2 block text-sm text-gray-700">
                            Pipeline enabled
                        </label>
                    </div>

                    <div class="flex justify-end space-x-3 pt-4 border-t">
                        <a asp-page="/Pipelines"
                           class="inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-all">
                            <i class="fas fa-times mr-2"></i>Cancel
                        </a>
                        <button type="submit"
                                class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-all">
                            <i class="fas fa-save mr-2"></i>Save Settings
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Pipeline Steps -->
        <div class="card">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-layer-group mr-2 text-blue-600"></i>Pipeline Steps
                </h2>
                <button hx-get="?handler=StepSelector&id=@Model.PipelineId"
                        hx-target="#modal-content"
                        hx-swap="innerHTML"
                        onclick="document.getElementById('step-modal').classList.remove('hidden')"
                        class="inline-flex items-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-all">
                    <i class="fas fa-plus mr-1"></i>Add Step
                </button>
            </div>
            <p class="text-sm text-gray-500 mb-4">Configure the steps that run when this pipeline executes</p>

            <!-- Step List (loaded via HTMX) -->
            <div hx-get="?handler=StepList&id=@Model.PipelineId"
                 hx-trigger="load"
                 hx-swap="innerHTML">
                <div class="text-center py-8 text-gray-400">
                    <i class="fas fa-spinner fa-spin text-2xl"></i>
                    <p class="mt-2">Loading steps...</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <h3 class="text-sm font-semibold text-yellow-900 mb-2">
            <i class="fas fa-exclamation-triangle mr-1"></i>Important Notes
        </h3>
        <ul class="text-sm text-yellow-800 space-y-1">
            <li>• Steps execute in order from top to bottom</li>
            <li>• Disabled steps are skipped during execution</li>
            <li>• Changes to step parameters take effect on the next pipeline run</li>
        </ul>
    </div>
</div>

<!-- Modal for Step Selector/Editor -->
<div id="step-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
        <!-- Background overlay -->
        <div class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75"
             onclick="document.getElementById('step-modal').classList.add('hidden')"></div>

        <!-- Modal panel -->
        <div
            class="relative inline-block w-full max-w-2xl overflow-hidden text-left align-middle transition-all transform bg-white rounded-lg shadow-xl">
            <div id="modal-content">
                <!-- Content loaded via HTMX -->
            </div>
        </div>
    </div>
</div>
