@page
@model Warehouse.App.Pages.AccountsDetailsModel
@{
    ViewData["Title"] = "Account Details";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-6">
        <a href="/Accounts" class="text-gray-500 hover:text-gray-700 text-sm">
            <i class="fas fa-arrow-left mr-1"></i>Back to Accounts
        </a>
        <div class="flex justify-between items-center mt-2">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">@Model.Account.Name Account</h1>
                <p class="text-gray-600">Details and status</p>
            </div>
            <a href="/AccountsEdit?id=@Model.Account.Id"
               class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors">
                <i class="fas fa-edit mr-2"></i>Edit Configuration
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Connection Status</h3>
            <div class="space-y-4">
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Status</span>
                    <span
                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(Model.Account.Enabled ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                        @(Model.Account.Enabled ? "Active" : "Inactive")
                    </span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">API Credentials</span>
                    @if (Model.Account.HasCredentials)
                    {
                        <span class="text-green-600 text-sm font-medium"><i class="fas fa-check-circle mr-1"></i>Configured</span>
                    }
                    else
                    {
                        <span class="text-amber-600 text-sm font-medium"><i class="fas fa-exclamation-triangle mr-1"></i>Missing</span>
                    }
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Last Updated</span>
                    <span class="text-gray-900">@Model.Account.UpdatedAt.ToString("g")</span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Balance Information</h3>
            <div class="text-center py-4">
                <p class="text-sm text-gray-500 mb-1">Total Estimated Value</p>
                <p class="text-3xl font-bold text-gray-900">@Model.Account.Balance.ToString("C")</p>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-100">
                <div class="flex justify-between text-sm">
                    <span class="text-gray-500">Asset</span>
                    <span class="text-gray-500">Value (USDT)</span>
                </div>
                <!-- Balance breakdown could go here -->
                <div class="mt-2 text-center text-sm text-gray-400 italic">
                    Detailed breakdown not available
                </div>
            </div>
        </div>
    </div>
</div>
