@page "/system-status"
@model SystemStatusModel
@{
    Layout = null;
}

<span id="system-status"
      class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @Model.StatusClass"
      hx-get="/system-status"
      hx-trigger="every 30s"
      hx-swap="outerHTML">
    <span
        class="w-2 h-2 rounded-full mr-1.5 @(Model.StatusText == "Online" ? "bg-green-400" : Model.StatusText == "Idle" ? "bg-yellow-400" : "bg-gray-400")"></span>
    @Model.StatusText
</span>
