@model StepListViewModel

<div id="step-list" class="space-y-3">
    @if (Model.Steps.Count == 0)
    {
        <div class="text-center py-8 text-gray-500">
            <i class="fas fa-layer-group text-4xl mb-3"></i>
            <p class="text-lg font-medium">No steps configured</p>
            <p class="text-sm">Click "Add Step" to get started</p>
        </div>
    }
    else
    {
        @foreach (StepItemViewModel step in Model.Steps.OrderBy(s => s.Order))
        {
            <partial name="Shared/_StepItem" model="step"/>
        }
    }
</div>
